#:kivy 1.10.0

<Gui>:
    do_default_tab: False
    TabbedPanelItem:
        text: 'Encryption'
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
            Label:
                id: labelinput
                size_hint_max_y: 30
                text: 'Password: password'
            TextInput:
                id: textinput
                size_hint_max_y: 30
                text: 'Enter password'
                multiline: False
                on_focus: root.clear()
                on_text_validate: root.setPassword()
            Label:
                id: filepath
                size_hint_max_y: 30
                text: 'File path: '
            Button:
                text: 'chose file'
#                on_release: root.manager.current = 'file'
                on_release: root.file()

#            FileChooserListView:
#                id: filechooser
#                on_selection: root.selected(filechooser.selection)
            Button:
                text: 'ENCRYPT FILE'
                on_release: root.encrypt()
    TabbedPanelItem:
        text: 'Decryption'
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            spacing: 10
            Label:
                text: 'Choose File: '
            Button:
                text: 'chose file'
            Button:
                text: 'ENCRYPT FILE'
<FileScreen>:
    BoxLayout:
        orientation: 'vertical'
        FileChooserListView:
            id: filechooser
#            on_selection: root.selected(filechooser.selection)
        Button:
            size_hint_max_y: 30
            text: 'Accept'
            on_release: root.accept(filechooser.selection)

